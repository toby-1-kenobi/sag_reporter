<div class="translation-progress mdl-shadow--2dp">

  <div class="header">Translation Progress for <%= language.name %></div>

  <div class="controls">
    <div class="mdlext-selectfield mdlext-js-selectfield mdlext-selectfield--floating-label">
      <select id="translation-progress-month-select" class="mdlext-selectfield__select">
        <option value=""></option>
        <%= (0..5).each do |m| %>
          <option value="<%= m.months.ago.strftime('%Y-%m') %>"><%= m.months.ago.strftime('%B %Y') %></option>
        <% end %>
      </select>
      <label for="translation-progress-method-select" class="mdlext-selectfield__label">Month</label>
    </div>
    <div class="mdlext-selectfield mdlext-js-selectfield mdlext-selectfield--floating-label">
      <select id="translation-progress-month-select" class="mdlext-selectfield__select">
        <option value="written">Written</option>
        <option value="oral">Oral</option>
      </select>
      <label for="translation-progress-method-select" class="mdlext-selectfield__label">Method</label>
    </div>
    <div class="mdlext-selectfield mdlext-js-selectfield mdlext-selectfield--floating-label">
      <select id="translation-progress-tool-select" class="mdlext-selectfield__select">
        <option value="paratext">Paratext</option>
        <option value="render">Render</option>
        <option value="other">Other</option>
      </select>
      <label for="translation-progress-tool-select" class="mdlext-selectfield__label">Tool</label>
    </div>
  </div>

  <div class="counters">
    <div><strong>Verse count</strong></div>
    <div>Done in Total: <%= 0 %></div>
    <div>Done this month: <%= 0 %></div>
    <div>Remaining: <%= 0 %></div>
  </div>

  <div class="measurables">
    <% Deliverable.translation_progress.each do |deliverable| %>
      <button class="mdl-button mdl-js-button" data-deliverable="<%= deliverable.id %>"><%= deliverable.short_form.en %></button>
    <% end %>
  </div>

  <div class="books">
    <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">

      <div class="mdl-tabs__tab-bar">
        <a href="#ot-panel" class="mdl-tabs__tab is-active">Old Testament</a>
        <a href="#nt-panel" class="mdl-tabs__tab">New Testament</a>
      </div>

      <div class="mdl-tabs__panel is-active" id="ot-panel">

      </div>

      <div class="mdl-tabs__panel" id="nt-panel">

      </div>
    </div>
  </div>

</div>