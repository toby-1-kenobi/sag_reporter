<% if @translation_project.valid? %>
  $('.translation-project-controls [data-auto-update]').removeClass('dirty');
  $('#translation-project-<%= @translation_project.id %>-tab').text("<%= @translation_project.name %>");
  $('.translation-project-errors').empty();
<% else %>
  $('.translation-project-errors').text("<%= @translation_project.errors.full_messages.to_sentence %>");
<% end %>