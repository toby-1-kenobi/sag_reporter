$('#project-content').html('<%= j render(partial: 'form') %>');

componentHandler.upgradeElements($('#project-content').find('.mdl-tabs').get());
componentHandler.upgradeElements($('#project-content').find('.mdl-textfield').get());
componentHandler.upgradeElements($('#project-content').find('.mdlext-js-menu-button').get());
componentHandler.upgradeElements($('#project-content').find('.mdlext-menu').get());

$('#project-name-input').on('input', function(){
    $('#project-name-submit').show().css('display', 'inline-block');
});

$('#responsible-tab.dirty').on('click', function(){
    $.ajax({
        url: '<%= edit_responsible_project_url(@project) %>',
        headers: {Accept: "text/javascript"}
    });
});

document.querySelector('#targets-by-language-button').addEventListener('menuselect', function(e) {
    $.ajax({
        url: $(e.detail.source).attr('data-ajax-url'),
        headers: {Accept: "text/javascript"}
    });
});

window.bindFilters();
$('.filter-trigger').trigger('change');