<%= form_for @tool, remote: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.collection_check_boxes :product_category_ids, ProductCategory.all, :id, "name_#{logged_in_user.interface_language.locale_tag}" do |box| %>
    <%= box.label class: 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do %>
      <%= box.check_box class: 'mdl-checkbox__input' %>
      <span class="mdl-checkbox__label"><%= box.text %></span>
    <% end %>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_area :description, class: 'mdl-textfield__input' %>
    <%= f.label :desctiption, class: 'mdl-textfield__label' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :url, class: 'mdl-textfield__input' %>
    <%= f.label :url, 'URL',  class: 'mdl-textfield__label' %>
  </div>

  <div class="mdlext-selectfield mdlext-js-selectfield mdlext-selectfield--floating-label">
    <%= f.collection_select :finish_line_marker_id, FinishLineMarker.all, :id, :name, {include_blank: true}, class: 'mdlext-selectfield__select' %>
    <%= f.label :finish_line_marker, class: 'mdlext-selectfield__label' %>
  </div>

  <%= f.hidden_field :language_id %>
<% end %>