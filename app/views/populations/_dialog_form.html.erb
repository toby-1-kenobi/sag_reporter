<dialog id="edit-dialog-population" class="mdl-dialog" data-for="language-population">
  <div class="mdl-dialog__title"><%= @language.name %> population</div>
  <div class="mdl-dialog__content ">
    <%= form_for Population.new, remote: true do |f| %>
        <%= hidden_field_tag 'population[language_id]', @language.id %>
        <div class="population-amount mdl-textfield mdl-js-textfield">
          <%= f.label :amount, class: 'mdl-textfield__label' %>
          <%= f.text_field :amount, class: 'mdl-textfield__input', pattern: '[0-9]+' %>
          <span class="mdl-textfield__error">Numbers only please!</span>
        </div>
        <div class="population-year mdl-textfield mdl-js-textfield">
          <%= f.label :year, class: 'mdl-textfield__label' %>
          <%= f.text_field :year, class: 'mdl-textfield__input', pattern: '[0-9]{4}' %>
          <span class="mdl-textfield__error">4 digit year please!</span>
        </div>
        <div class="population-source mdl-textfield mdl-js-textfield">
          <%= f.label :source, 'Data source', class: 'mdl-textfield__label' %>
          <%= f.text_field :source, class: 'mdl-textfield__input' %>
        </div>
        <%= label_tag 'population[international]', class: 'population-international mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do %>
            <%= f.check_box :international, class: 'mdl-checkbox__input' %>
            <span class="mdl-checkbox__label">Includes people living outside India</span>
        <% end %>
    <% end %>
  </div>
  <div class="md-dialog__actions">
    <button type="button" class="mdl-button submit">Submit</button>
    <button type="button" class="mdl-button cancel">Cancel</button>
  </div>
</dialog>